{
  "name": "stack-ui-demo",
  "version": "1.0.0",
  "description": "Easy to use UI framework for OpenRCT2",
  "license": "MIT",
  "author": "nexmond",
  "main": "stack-ui-demo.js",
  "scripts": {
    "build": "tsc",
    "minify": "uglifyjs --compress --mangle --output demo/stack-ui-demo.min.js -- demo/stack-ui-demo.js",
    "build-product": "npm run build && npm run minify && del-cli --force demo/stack-ui-demo.js",
    "copy": "copy demo\\stack-ui-demo.js \"%HOMEDRIVE%%HOMEPATH%\\Documents\\OpenRCT2\\plugin\"",
    "watch": "tsc-watch --onSuccess \"npm run copy\""
  },
  "devDependencies": {
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3",
    "uglify-js": "^3.12.5"
  }
}
